{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %}Packages{% endblock %}

{% block search_wrapper %}
  {% include 'dashboard/packages/_search_box.html.twig' %}
{% endblock %}

{% block page_actions %}
  {% if is_granted('ROLE_ADMIN') %}
    <div class="global-actions">
      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          Add Package
        </button>
        <ul class="dropdown-menu">
          {% set addVcsUrl = dashboard_path('dashboard_packages_add_vcs') %}
          <li><a class="dropdown-item" href="{{ addVcsUrl }}">Add VCS repository</a></li>
          {% set addMirroringUrl = dashboard_path('dashboard_packages_add_mirroring') %}
          <li><a class="dropdown-item" href="{{ addMirroringUrl }}">Mirror from registry</a></li>
        </ul>
      </div>
    </div>
  {% endif %}
{% endblock %}

{% block page_content %}
  <div class="d-grid gap-3">
    {% for package in packages %}
      <div class="card">
        <div class="card-body py-2">
          {% set packageInfoUrl = dashboard_path('dashboard_packages_info', {packageName: package.name}) %}
          <a href="{{ packageInfoUrl }}"><h5 class="card-title">{{ package.name }}</h5></a>
          {% if package.mirrorRegistry %}
            <p class="card-text mb-1 text-body-secondary">Mirrored from {{ package.mirrorRegistry.name }}</p>
          {% endif %}
          <p class="card-text">{{ package.description ?? '<em>No description provided.</em>' }}</p>
        </div>
      </div>
    {% else %}
      <table class="table datagrid datagrid-empty">
        <tbody>
          {% for i in 1..14 %}
            <tr class="empty-row">
              <td><span></span></td>
              <td><span></span></td>
              <td><span></span></td>
              <td><span></span></td>
              <td><span></span></td>
              <td><span></span></td>
            </tr>

            {% if 3 == loop.index %}
              <tr class="no-results">
                <td colspan="100">
                  {{ t('datagrid.no_results', ea.i18n.translationParameters, 'EasyAdminBundle')|trans }}
                </td>
              </tr>
            {% endif %}
          {% endfor %}
        </tbody>
      </table>
    {% endfor %}
  </div>

  {% if packages|length %}
    <div class="content-panel-footer without-padding without-border">
      {% block paginator %}
        {{ include(ea.templatePath('crud/paginator')) }}
      {% endblock paginator %}
    </div>
  {% endif %}
{% endblock %}
