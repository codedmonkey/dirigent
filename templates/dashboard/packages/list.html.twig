{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %}Packages{% endblock %}

{% block search_wrapper %}
  {{ include('dashboard/packages/_search_box.html.twig', {searchQuery: searchQuery}, with_context: false) }}
{% endblock %}

{% block page_actions %}
  {% if is_granted('ROLE_ADMIN') %}
    <div class="global-actions">
      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          Add Package
        </button>
        <ul class="dropdown-menu">
          {% set addVcsUrl = path('dashboard_packages_add_vcs') %}
          <li><a class="dropdown-item" href="{{ addVcsUrl }}">Add VCS repository</a></li>
          {% set addMirroringUrl = path('dashboard_packages_add_mirroring') %}
          <li><a class="dropdown-item" href="{{ addMirroringUrl }}">Mirror from registry</a></li>
        </ul>
      </div>
    </div>
  {% endif %}
{% endblock %}

{% block page_content %}
  <div class="d-flex align-items-center gap-2 mb-3">
    <div>{{ 'Filter by'|trans }}</div>
    {% if registries|length %}
      <div>
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            {{ selectedRegistry ? (selectedRegistry == 'local' ? 'Local'|trans : selectedRegistry.name)  : 'All registries'|trans }}
          </button>
          <ul class="dropdown-menu">
            {{ _self.dropdownItem(selectedRegistry, null, 'registry', 'All registries'|trans) }}
            {{ _self.dropdownItem(selectedRegistry, 0, 'registry', 'Local'|trans) }}
            {% for registry in registries %}
              {{ _self.dropdownItem(selectedRegistry, registry.id, 'registry', registry.name) }}
            {% endfor %}
          </ul>
        </div>
      </div>
    {% endif %}
    {% if types|length %}
      <div>
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            {{ selectedType ? selectedType : ('All types'|trans) }}
          </button>
          <ul class="dropdown-menu">
            {{ _self.dropdownItem(selectedType, null, 'type', 'All tyoes'|trans) }}
            {% for type in types %}
              {{ _self.dropdownItem(selectedType, type, 'type', type) }}
            {% endfor %}
          </ul>
        </div>
      </div>
    {% endif %}
    {% if filtersActive %}
      <div>
        <a class="btn btn-secondary" href="{{ path('dashboard_packages') }}">{{ 'Clear filters'|trans }}</a>
      </div>
    {% endif %}
  </div>

  {{ include('dashboard/packages/_package_list.html.twig', {paginator: paginator}, with_context: false) }}
{% endblock %}

{% macro dropdownItem(selected, value, key, label) %}
  {% if value is same as(selected) %}
    <li><span class="dropdown-item active">{{ label }}</span></li>
  {% else %}
    <li><a class="dropdown-item" href="{{ packageFilterUrl(key, value) }}">{{ label }}</a></li>
  {% endif %}
{% endmacro %}
