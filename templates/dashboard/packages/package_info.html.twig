{% extends 'dashboard/packages/package_base.html.twig' %}

{% block page_title %}
  {%- apply spaceless -%}
    {{ package.name }}
    <small>{{ version.extendedName }}</small>
  {%- endapply -%}
{% endblock %}

{% block page_content %}
  {{ include('dashboard/packages/_package_header.html.twig', {currentPage: 'info'}) }}

  <div class="row mb-3">
    <div class="col-md-8">
      <div class="bg-body-secondary px-3 py-2 mb-2 rounded">
        <pre class="m-0"><code>composer require {{ package.name }}</code></pre>
      </div>

      <p class="lead">{{ metadata.description }}</p>

      {% if metadata.authors|length > 0 %}
        <div class="d-flex flex-wrap gap-2 mb-2" aria-label="{{ 'Authors'|trans }}">
          {% for author in metadata.authors %}
            {% set authorText %}<span class="fa-solid fa-user fa-fw me-1" aria-hidden="true"></span>{{ author.name }}{% endset %}
            {% if author.homepage is defined %}<a href="{{ author.homepage }}">{{ authorText }}</a>{% else %}<span>{{ authorText }}</span>{% endif %}
          {% endfor %}
        </div>
      {% endif %}

      {% if metadata.keywords|length > 0 %}
        <div class="d-flex align-items-center mb-2">
          <span class="fa-solid fa-tags fa-fw me-1" title="{{ 'Keywords'|trans }}" aria-hidden="true"></span>

          <div class="d-flex flex-wrap gap-2" aria-label="{{ 'Keywords'|trans }}">
            {% for keyword in metadata.keywords %}
              <span>{{ keyword.name }}</span>
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </div>
    <div class="col-md-4">
      <div class="dirigent-package-sidebar bg-body-secondary px-3 py-2 mb-2 rounded">
        {% if package.browsableRepositoryUrl %}
          <div>
            <a href="{{ package.browsableRepositoryUrl }}">{{ package.prettyBrowsableRepositoryUrl }}</a>
          </div>
        {% endif %}
        {% if package.mirrorRegistry %}
          <div>Mirrored from {{ package.mirrorRegistry.name }}</div>
        {% endif %}
        {% if package.browsableRepositoryUrl or package.mirrorRegistry %}
          <hr class="my-1">
        {% endif %}
        {% if metadata.homepage %}
          <div><a href="{{ metadata.homepage }}">Homepage</a></div>
        {% endif %}
        {% set packageStatisticsUrl = path('dashboard_packages_statistics', {package: package.name}) %}
        <div><span><a href="{{ packageStatisticsUrl }}">{{ 'Installations'|trans }}</a></span> {{ package.installations.total }}</div>
        {% if dependentCount > 0 %}
          {% set packageDependentsUrl = path('dashboard_packages_dependents', {package: package.name}) %}
          <div><span><a href="{{ packageDependentsUrl }}">{{ 'Dependents'|trans }}</a></span> {{ dependentCount }}</div>
        {% endif %}
        {% if suggesterCount > 0 %}
          {% set packageSuggestersUrl = path('dashboard_packages_suggesters', {package: package.name}) %}
          <div><span><a href="{{ packageSuggestersUrl }}">{{ 'Suggesters'|trans }}</a></span> {{ suggesterCount }}</div>
        {% endif %}
        {% if implementationCount > 0 %}
          {% set packageImplementationsUrl = path('dashboard_packages_implementations', {package: package.name}) %}
          <div><span><a href="{{ packageImplementationsUrl }}">{{ 'Implementations'|trans }}</a></span> {{ implementationCount }}</div>
        {% endif %}
        {% if providerCount > 0 %}
          {% set packageProvidersUrl = path('dashboard_packages_providers', {package: package.name}) %}
          <div><span><a href="{{ packageProvidersUrl }}">{{ 'Providers'|trans }}</a></span> {{ providerCount }}</div>
        {% endif %}
        {% if metadata.license %}
          <div><span>{{ 'License'|trans }}</span> {{ metadata.license|join(', ') }}</div>
        {% else %}
          <div>No license specified</div>
        {% endif %}
      </div>
      {% apply spaceless %}
        <p class="px-3 mb-0">
          <small>
            {{ 'Last updated at %date%'|trans({'%date%': package.updatedAt|date}) }}
            {% if package.updateScheduledAt %}
              <br>
              {{ 'An update for this package has been scheduled'|trans }}
            {% endif %}
          </small>
        </p>
      {% endapply %}
    </div>
  </div>

  <div class="d-flex justify-content-between border-top border-bottom py-3 mb-3">
    <div><strong>{{ version.name }}</strong></div>
    {% if metadata.releasedAt %}
      <div>{{ metadata.releasedAt.format('Y-m-d H:i') }} UTC</div>
    {% endif %}
  </div>

  <div class="row border-bottom pb-3 mb-3">
    {{ _self.linkBlock('Requires', metadata.requireLinks) }}
    {{ _self.linkBlock('Requires (dev)', metadata.devRequireLinks) }}
    {{ _self.provideBlock(metadata.provideLinks) }}
    {{ _self.linkBlock('Suggests', metadata.suggestLinks) }}
    {{ _self.linkBlock('Conflicts', metadata.conflictLinks) }}
    {{ _self.linkBlock('Replaces', metadata.replaceLinks) }}
  </div>

  <div class="row border-bottom pb-3 mb-3">
    <div class="col-md-6">
      {% if metadata.hasSource() %}
        <div class="h5">
          {{ 'Source'|trans }}
          <span class="badge text-bg-secondary">{{ metadata.sourceType }}</span>
        </div>

        <div class="mb-2">
          <code>{{ metadata.sourceUrl }}</code>
        </div>

        <div class="mb-2">
          {{ 'Reference'|trans }}: <code>{{ metadata.sourceReference }}</code>
        </div>

        <div class="mb-2">
          {% set browseUrl = metadata.browsableRepositoryUrl %}
          {% if browseUrl %}
            <a class="btn btn-sm btn-secondary" href="{{ browseUrl }}">
              <span class="fa-solid fa-code me-1" aria-hidden="true"></span>
              {{ 'Browse code'|trans }}
            </a>
          {% endif %}
        </div>
      {% else %}
        <div class="h5">{{ 'Source'|trans }}</div>
        -
      {% endif %}
    </div>
    <div class="col-md-6">
      {% if metadata.hasDist() %}
        <div class="h5">
          {{ 'Distribution'|trans }}
          <span class="badge text-bg-secondary">{{ metadata.distType }}</span>
        </div>

        <div class="mb-2">
          {{ 'Reference'|trans }}: <code>{{ metadata.distReference }}</code>
        </div>

        <div class="mb-2">
          <a class="btn btn-sm btn-secondary" href="{{ metadata.distUrl }}" download>
            <span class="fa-solid fa-download me-1" aria-hidden="true"></span>
            {{ 'Download' }}
          </a>
        </div>
      {% else %}
        <div class="h5">{{ 'Distribution'|trans }}</div>
        -
      {% endif %}
    </div>
  </div>

  {% if metadata.readme %}
    <div class="mb-3">
      {{ metadata.readme|raw }}
    </div>
  {% endif %}
{% endblock %}

{% macro linkBlock(title, links) %}
  <div class="col-md-6 col-lg-4">
    <div class="h5">{{ title|trans }}</div>

    <ul>
      {% for link in links %}
        {% if link.linkedPackageName is existing_package %}
          <li><a href="{{ path('dashboard_packages_info', {package: link.linkedPackageName}) }}">{{ link.linkedPackageName }}</a>: {{ link.linkedVersionConstraint }}</li>
        {% else %}
          <li>{{ link.linkedPackageName }}: {{ link.linkedVersionConstraint }}</li>
        {% endif %}
      {% else %}
        <li>None</li>
      {% endfor %}
    </ul>
  </div>
{% endmacro %}

{% macro provideBlock(links) %}
  <div class="col-md-6 col-lg-4">
    <div class="h5">{{ 'Provides'|trans }}</div>

    <ul>
      {% for link in links %}
        {% if link.linkedPackageName is existing_package %}
          <li><a href="{{ path('dashboard_packages_info', {package: link.linkedPackageName}) }}">{{ link.linkedPackageName }}</a>: {{ link.linkedVersionConstraint }}</li>
        {% elseif link.implementation and link.implementedPackageName is existing_package %}
          <li><a href="{{ path('dashboard_packages_info', {package: link.implementedPackageName}) }}">{{ link.linkedPackageName }}</a>: {{ link.linkedVersionConstraint }}</li>
        {% else %}
          <li>{{ link.linkedPackageName }}: {{ link.linkedVersionConstraint }}</li>
        {% endif %}
      {% else %}
        <li>None</li>
      {% endfor %}
    </ul>
  </div>
{% endmacro %}
