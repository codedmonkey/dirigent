# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.css]
indent_size = 2

[*.js]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.ts]
indent_size = 2

[*.twig]
indent_size = 2

[*.yaml]
indent_size = 2

# Override indent size for YAML files that are managed with Symfony Flex recipes
[config/**.yaml]
indent_size = 4
